    <script>
        tippy('[title]', {
          theme: 'custom',
          arrow: false,
          placement: 'right',
          zIndex: 9999999999,
          maxWidth: 300,
          duration: 700,
      
          content(reference) {
            const title = reference.getAttribute('title');
            reference.removeAttribute('title');
            return title;
          },
        });
      </script>
